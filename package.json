{
    "name": "github-issues-in-sidebar",
    "displayName": "Github Issues in Sidebar",
    "description": "A VSCode extension to view GitHub issues in the sidebar.",
    "version": "0.0.1",
    "publisher": "user",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:githubIssues"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "github-issues-sidebar-container",
                    "title": "GitHub Issues",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "github-issues-sidebar-container": [
                {
                    "id": "githubIssues",
                    "name": "Issues"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "typescript": "^5.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@octokit/rest": "^22.0.0"
    },
    "repository": {
        "type": "git",
        "url": ""
    }
} 