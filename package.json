{
    "name": "github-issues-in-sidebar",
    "displayName": "Github Issues in Sidebar",
    "description": "A VSCode extension to view GitHub issues in the sidebar.",
    "version": "0.0.1",
    "publisher": "user",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:githubIssues"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "githubIssues",
                    "name": "GitHub Issues",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "githubIssues.setToken",
                "title": "Set GitHub Personal Access Token"
            },
            {
                "command": "githubIssues.selectRepository",
                "title": "Select Repository"
            },
            {
                "command": "githubIssues.refresh",
                "title": "Refresh"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "githubIssues.selectRepository",
                    "when": "view == githubIssues",
                    "group": "navigation",
                    "icon": "$(pencil)"
                },
                {
                    "command": "githubIssues.refresh",
                    "when": "view == githubIssues",
                    "group": "navigation",
                    "icon": "$(refresh)"
                }
            ]
        },
        "configuration": {
            "title": "GitHub Issues",
            "properties": {
                "githubIssues.authToken": {
                    "type": "string",
                    "default": "",
                    "description": "Your personal access token for the GitHub API."
                },
                "githubIssues.repoOwner": {
                    "type": "string",
                    "default": "",
                    "description": "The owner of the repository."
                },
                "githubIssues.repoName": {
                    "type": "string",
                    "default": "",
                    "description": "The name of the repository."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "vsce": "^2.15.0",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@octokit/rest": "^22.0.0"
    },
    "repository": {
        "type": "git",
        "url": ""
    }
}
